---
export interface Props {
  title: string;
  description: string;
  iconPath: string;
  class?: string;
  iconSize?: 'sm' | 'md' | 'lg';
  iconColor?: 'primary' | 'secondary' | 'accent';
}

const { 
  title, 
  description, 
  iconPath, 
  class: className = '', 
  iconSize = 'md',
  iconColor = 'primary'
} = Astro.props;

const iconSizeClasses = {
  sm: 'w-10 h-10 md:w-12 md:h-12',
  md: 'w-12 h-12 md:w-16 md:h-16', 
  lg: 'w-16 h-16 md:w-20 md:h-20'
};

const iconColorClasses = {
  primary: 'bg-primary-100 text-primary-600',
  secondary: 'bg-secondary-100 text-secondary-600',
  accent: 'bg-brand-light text-brand-accent'
};

const svgSizeClasses = {
  sm: 'w-5 h-5 md:w-6 md:h-6',
  md: 'w-6 h-6 md:w-8 md:h-8',
  lg: 'w-8 h-8 md:w-10 md:h-10'
};
---

<div class={`bg-brand-surface rounded-lg md:rounded-xl shadow-lg p-6 md:p-8 text-center ${className}`}>
  <div class={`${iconSizeClasses[iconSize]} ${iconColorClasses[iconColor]} rounded-lg flex items-center justify-center mx-auto mb-4 md:mb-6`}>
    <svg class={`${svgSizeClasses[iconSize]}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPath}></path>
    </svg>
  </div>
  <h3 class="text-lg md:text-xl font-semibold text-brand-primary mb-3 md:mb-4">{title}</h3>
  <p class="text-sm md:text-base text-brand-secondary">{description}</p>
</div>
