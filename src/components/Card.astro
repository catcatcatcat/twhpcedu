---
export interface Props {
  class?: string;
  padding?: 'sm' | 'md' | 'lg';
  variant?: 'default' | 'centered';
}

const { class: className = '', padding = 'md', variant = 'default' } = Astro.props;

const paddingClasses = {
  sm: 'p-4 md:p-6',
  md: 'p-6 md:p-8', 
  lg: 'p-8 md:p-12'
};

const variantClasses = {
  default: '',
  centered: 'text-center'
};
---

<div class={`bg-brand-surface rounded-lg md:rounded-xl shadow-lg ${paddingClasses[padding]} ${variantClasses[variant]} ${className}`}>
  <slot />
</div>
