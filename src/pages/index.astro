---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

// Get latest news articles (3 most recent)
const allNews = await getCollection('news');
const latestNews = allNews
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
  .slice(0, 3);

// Format date function
function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<Layout title="台灣高效能運算教育協會 | TWHPCEdu">
  <Header />
  <main>
    <!-- Hero Section with Background Image -->
    <section class="relative min-h-screen bg-cover bg-center bg-no-repeat" style={`background-image: url('${import.meta.env.BASE_URL}/hero-computing.jpg');`}>
      <!-- Semi-transparent overlay -->
      <div class="absolute inset-0 bg-dark-800 bg-opacity-70"></div>
      
      <!-- Hero content -->
      <div class="relative z-10 flex items-center justify-center min-h-screen">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
          <h1 class="text-4xl md:text-6xl font-bold mb-6 text-white">台灣高效能運算教育協會</h1>
          <p class="text-xl md:text-2xl text-gray-200 mb-8 max-w-4xl mx-auto">
            Taiwan High Performance Computing Education Association
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href="/join-us" 
              class="bg-primary-600 text-white px-8 py-4 rounded-lg font-semibold hover:bg-primary-700 transition-colors"
            >
              Join Us
            </a>
            <a 
              href="/about" 
              class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-dark-800 transition-colors"
            >
              了解更多
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Mission Section -->
    <section class="py-16 bg-cream-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-dark-800 mb-6">我們的使命</h2>
          <p class="text-xl text-dark-700 max-w-4xl mx-auto leading-relaxed">
            TWHPCEdu 致力於培育具備理論與實務能力的 HPC 與 IC 設計人才，連結學界與產業需求。
          </p>
        </div>
      </div>
    </section>

    <!-- Key Projects Section -->
    <section class="py-16 bg-secondary-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-dark-800 mb-6">重點專案</h2>
          <p class="text-xl text-dark-700 max-w-3xl mx-auto">
            探索我們的開放研究計畫和重點專案
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 gap-8">
          <!-- BlackBear Project -->
          <div class="bg-white rounded-lg shadow-lg p-8 hover:shadow-xl transition-shadow">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 bg-secondary-200 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-dark-800">BlackBear</h3>
            </div>
            <p class="text-dark-700 mb-6 leading-relaxed">
              高效能運算模擬與建模的開源專案。
            </p>
            <a 
              href="/projects/blackbear" 
              class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium"
            >
              了解更多
              <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>

          <!-- ACALSim Project -->
          <div class="bg-white rounded-lg shadow-lg p-8 hover:shadow-xl transition-shadow">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 bg-secondary-200 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-dark-800">ACALSim</h3>
            </div>
            <p class="text-dark-700 mb-6 leading-relaxed">
              用於學術和產業研究的 IC 設計模擬平台。
            </p>
            <a 
              href="/projects/acalsim" 
              class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium"
            >
              了解更多
              <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Latest News Section -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-dark-800 mb-4">最新消息</h2>
          <p class="text-xl text-dark-700 max-w-3xl mx-auto">
            掌握協會最新動態、活動資訊與技術發展
          </p>
        </div>
        
        <div class="grid md:grid-cols-3 gap-8 mb-12">
          {latestNews.map((article) => (
            <article class="bg-cream-50 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
              {article.data.image && (
                <img 
                  src={`${import.meta.env.BASE_URL}/${article.data.image}`} 
                  alt={article.data.title}
                  class="w-full h-48 object-cover"
                />
              )}
              <div class="p-6">
                <div class="flex items-center mb-3">
                  <span class="bg-primary-100 text-primary-800 px-3 py-1 rounded-full text-sm font-medium capitalize">
                    {article.data.category}
                  </span>
                  <span class="text-gray-500 text-sm ml-auto">{formatDate(article.data.pubDate)}</span>
                </div>
                <h3 class="text-xl font-bold text-dark-800 mb-3">
                  <a href={`/news/${article.slug}`} class="hover:text-primary-600 transition-colors">
                    {article.data.title}
                  </a>
                </h3>
                <p class="text-dark-700 mb-4 line-clamp-3">{article.data.description}</p>
                <a 
                  href={`/news/${article.slug}`}
                  class="text-primary-600 hover:text-primary-700 font-medium text-sm"
                >
                  閱讀更多 →
                </a>
              </div>
            </article>
          ))}
        </div>
        
        <div class="text-center">
          <a 
            href="/news" 
            class="inline-flex items-center bg-primary-600 text-white px-8 py-3 rounded-lg hover:bg-primary-700 transition-colors font-medium"
          >
            查看所有消息
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Partners Section -->
    <section class="py-16 bg-cream-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-dark-800 mb-6">合作夥伴</h2>
          <p class="text-xl text-dark-700 max-w-3xl mx-auto">
            與我們攜手推動高效能運算教育發展的重要夥伴
          </p>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
          <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow text-center">
            <div class="text-2xl font-bold text-secondary-600 mb-2">學術機構</div>
            <p class="text-dark-700 text-sm">頂尖大學合作</p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow text-center">
            <div class="text-2xl font-bold text-secondary-600 mb-2">產業夥伴</div>
            <p class="text-dark-700 text-sm">科技公司協作</p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow text-center">
            <div class="text-2xl font-bold text-secondary-600 mb-2">研究機構</div>
            <p class="text-dark-700 text-sm">專業研究單位</p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow text-center">
            <div class="text-2xl font-bold text-secondary-600 mb-2">國際組織</div>
            <p class="text-dark-700 text-sm">全球網絡連結</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Call to Action Section -->
    <section class="py-16 bg-secondary-500 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">加入我們的社群</h2>
        <p class="text-xl text-secondary-100 mb-8 max-w-3xl mx-auto">
          成為台灣高效能運算教育協會的一員，與我們一起推動 HPC 與 IC 設計教育的發展
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/join-us" 
            class="bg-primary-600 text-white px-8 py-4 rounded-lg font-semibold hover:bg-primary-700 transition-colors"
          >
            立即加入會員
          </a>
          <a 
            href="/about#board" 
            class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-secondary-600 transition-colors"
          >
            認識理監事團隊
          </a>
          <a 
            href="/donate" 
            class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-secondary-600 transition-colors"
          >
            支持我們的使命
          </a>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
